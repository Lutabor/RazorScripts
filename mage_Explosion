// Explosion 
clearsysmsg 
getlabel backpack pingCheck
target clear

while not dead
    hotkey 'next murderer player target'
    getlabel backpack pingCheck
    if skill 'magery' >= 60 and not insysmsg 'No one matching that was found on your screen.'
        overhead '† Murderer †' 88 lasttarget  
        getlabel backpack pingCheck      
        cast 'explosion'
        wait 100
        if not insysmsg 'You do not have that spell'
            while casting 
                wait 100
            endwhile
            wft 200
            hotkey 'last target'
            getlabel backpack pingCheck   
            hotkey 'attack last target'
            wait 200
        endif  
        break  
    endif 

    hotkey 'next criminal player target'
    getlabel backpack pingCheck
    if skill 'magery' >= 60 and not insysmsg 'No one matching that was found on your screen.'
        overhead '† Criminal †' 88 lasttarget  
        getlabel backpack pingCheck      
        cast 'explosion'
        wait 100
        if not insysmsg 'You do not have that spell'
            while casting 
                wait 100
            endwhile
            wft 200
            hotkey 'last target'
            getlabel backpack pingCheck   
            hotkey 'attack last target'
            wait 200
        endif  
        break 
    endif 

    hotkey 'next grey player target'
    getlabel backpack pingCheck
    if skill 'magery' >= 60 and not insysmsg 'No one matching that was found on your screen.'
        overhead '† Grey Player †' 88 lasttarget  
        getlabel backpack pingCheck      
        cast 'explosion'
        wait 100
        if not insysmsg 'You do not have that spell'
            while casting 
                wait 100
            endwhile
            wft 200
            hotkey 'last target'
            getlabel backpack pingCheck   
            hotkey 'attack last target'
            wait 200
        endif  
        break 
    endif     
        
    hotkey 'next murderer monster target'         
    getlabel backpack pingCheck
    if skill 'magery' >= 60 and not insysmsg 'No one matching that was found on your screen.'
        overhead '† Boss Monster †' 88 lasttarget  
        getlabel backpack pingCheck      
        cast 'explosion'
        wait 100
        if not insysmsg 'You do not have that spell'
            while casting 
                wait 100
            endwhile
            wft 200
            hotkey 'last target'
            getlabel backpack pingCheck   
            hotkey 'attack last target'
            wait 200
        endif  
        break 
    endif 
    
    hotkey 'target closest grey monster' 
    getlabel backpack pingCheck
    if skill 'magery' >= 60 and not insysmsg 'No one matching that was found on your screen.'
        overhead '† Monster †' 88 lasttarget  
        getlabel backpack pingCheck      
        cast 'explosion'
        wait 100
        if not insysmsg 'You do not have that spell'
            while casting 
                wait 100
            endwhile
            wft 200
            hotkey 'last target'
            getlabel backpack pingCheck   
            hotkey 'attack last target'
            wait 200
        endif  
        break 
    endif 
    break
endwhile

hotkey 'play script: Subs\Routing'    
    
    
    
